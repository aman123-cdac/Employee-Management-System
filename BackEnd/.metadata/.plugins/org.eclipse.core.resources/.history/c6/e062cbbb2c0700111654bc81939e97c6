package com.example.demo.controller;

import com.example.demo.entity.Employee;
import com.example.demo.service.EmployeeService;
import org.springframework.http.HttpStatus;
import org.springframework.security.core.Authentication;
import org.springframework.security.core.GrantedAuthority;
import org.springframework.web.bind.annotation.*;
import org.springframework.web.server.ResponseStatusException;

import java.util.List;

@RestController
@RequestMapping("/api/employees")
@CrossOrigin(origins = "http://localhost:5173")
public class EmployeeController {

    private final EmployeeService service;

    public EmployeeController(EmployeeService service) {
        this.service = service;
    }

    // ðŸ” Helper method to check ADMIN
    private boolean isAdmin(Authentication authentication) {
        return authentication.getAuthorities().stream()
                .map(GrantedAuthority::getAuthority)
                .anyMatch(role -> role.equals("ROLE_ADMIN"));
    }

    // âœ… GET EMPLOYEES (ADMIN â†’ all, USER â†’ only self)
    @GetMapping
    public List<Employee> getEmployees(Authentication authentication) {

        if (isAdmin(authentication)) {
            return service.getAll();
        }

        String username = authentication.getName();
        return List.of(service.getByUsername(username));
    }

    // âœ… ADD EMPLOYEE (ADMIN ONLY)
    @PostMapping
    public Employee add(@RequestBody Employee emp,
                        Authentication authentication) {

        if (!isAdmin(authentication)) {
            throw new ResponseStatusException(HttpStatus.FORBIDDEN, "Access Denied");
        }

        return service.add(emp);
    }

    // âœ… DELETE EMPLOYEE (ADMIN ONLY)
    @DeleteMapping("/{id}")
    public void delete(@PathVariable Long id,
                       Authentication authentication) {

        if (!isAdmin(authentication)) {
            throw new ResponseStatusException(HttpStatus.FORBIDDEN, "Access Denied");
        }

        service.delete(id);
    }

    // âœ… GET BY ID (ADMIN OR SELF)
    @GetMapping("/{id}")
    public Employee getById(@PathVariable Long id,
                            Authentication authentication) {

        Employee employee = service.getById(id);

        if (isAdmin(authentication)) {
            return employee;
        }

        if (employee.getUsername().equals(authentication.getName())) {
            return employee;
        }

        throw new ResponseStatusException(HttpStatus.FORBIDDEN, "Access Denied");
    }

    // âœ… UPDATE (ADMIN ONLY)
    @PutMapping("/{id}")
    public Employee updateEmployee(@PathVariable Long id,
                                   @RequestBody Employee emp,
                                   Authentication authentication) {

        if (!isAdmin(authentication)) {
            throw new ResponseStatusException(HttpStatus.FORBIDDEN, "Access Denied");
        }

        return service.updateEmployee(id, emp);
    }

    // âœ… SEARCH (ADMIN ONLY)
    @GetMapping("/search")
    public List<Employee> searchEmployee(@RequestParam String keyword,
                                         Authentication authentication) {

        if (!isAdmin(authentication)) {
            throw new ResponseStatusException(HttpStatus.FORBIDDEN, "Access Denied");
        }

        return service.searchByIdNameOrDepartment(keyword);
    }
}
